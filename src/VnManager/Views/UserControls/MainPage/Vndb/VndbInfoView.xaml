<UserControl x:Class="VnManager.Views.UserControls.MainPage.Vndb.VndbInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             x:Name="InfoUserControl"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VnManager.Views.UserControls.MainPage.Vndb"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:res="clr-namespace:VnManager.Strings"
             xmlns:s="https://github.com/canton7/Stylet"
             xmlns:adExt="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
             xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
             xmlns:vm="clr-namespace:VnManager.ViewModels.UserControls.MainPage.Vndb"
             xmlns:ext="clr-namespace:VnManager.Extensions"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance vm:VndbInfoViewModel}"
             d:DesignHeight="950" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="300"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="LeftContent" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="250"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="24" FontWeight="DemiBold"
                   Margin="7,20,0,0"/>

            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="5">
                <Button Width="150" Height="50" Content="Play" Background="ForestGreen" adExt:CursorSpotlightExtension.BorderBrush="Lime" adExt:CursorSpotlightExtension.BackgroundBrush="ForestGreen"/>

                <StackPanel Margin="25,0,0,0">
                    <Label Content="Last Played" FontSize="16" FontWeight="Bold"/>
                    <Label Content="{Binding LastPlayed}"/>
                </StackPanel>

                <Grid Margin="25,0,0,0" VerticalAlignment="Center">
                    <iconPacks:Material Kind="ProgressClock" Height="28" Width="28"/>
                </Grid>
                <StackPanel Margin="5,0,0,0">
                    <Label Content="PlayTime" FontSize="16" FontWeight="Bold"/>
                    <Label Content="{Binding PlayTime}"/>
                </StackPanel>

            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Margin="15">
                <Label Content="Vndb"/>
                <Label Content="Store Page" Margin="15,0,0,0"/>
                <Label Content="Wikipedia" Margin="15,0,0,0"/>
                <Label Content="Encubed" Margin="15,0,0,0"/>
                <Label Content="Renai" Margin="15,0,0,0"/>
            </StackPanel>

            <ScrollViewer Grid.Row="3" Margin="7" adExt:ScrollViewerExtension.VerticalScrollBarExpansionMode="NeverExpand">
                <TextBlock ext:TextBlockInLineBinding.Inlines="{Binding DescriptionInLine}"/>
            </ScrollViewer>
            
        </Grid>

        <Grid x:Name="RightContent" Grid.Column="1" Background="Red">
            
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                    <Border BorderThickness="3" BorderBrush="Black">
                        <Image HorizontalAlignment="Left" MaxWidth="200" MaxHeight="300"  RenderOptions.BitmapScalingMode="Fant" Source="{Binding CoverImage, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Border>
                </StackPanel>
                <Label DockPanel.Dock="Top" Content="{Binding MainTitle}"/>
                <Label DockPanel.Dock="Top" Content="{Binding JpnTitle}"/>
                <TextBlock DockPanel.Dock="Top" Margin="0,5,0,0" Text="{Binding Aliases}" TextWrapping="Wrap"/>
                <TextBlock DockPanel.Dock="Top" Text="{Binding ReleasedDate}"/>
                <TextBlock DockPanel.Dock="Top" Text="{Binding VnLength}"/>
                <TextBlock DockPanel.Dock="Top" Text="Popularity:99.99"/>
                <TextBlock DockPanel.Dock="Top" Text="Rating:9"/>
                


            </DockPanel>
        </Grid>
        <!--End Content -->
    </Grid>
    <!--<Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>


        

        

        <Grid Grid.Row="2" Grid.Column="0" >
            <TextBlock ext:TextBlockInLineBinding.Inlines="{Binding DescriptionInLine}" Foreground="DimGray" FontWeight="DemiBold" TextWrapping="Wrap"/>
        </Grid>

        <Grid Grid.Row="3" Grid.Column="0">
            <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserResizeRows="False" IsReadOnly="True"
                                  ItemsSource="{Binding VnRelations}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Title"  Binding="{Binding RelTitle}"/>
                    <DataGridTextColumn Header="Relation" Binding="{Binding RelRelation}"/>
