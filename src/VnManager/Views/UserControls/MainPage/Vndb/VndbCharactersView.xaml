<UserControl x:Class="VnManager.Views.UserControls.MainPage.Vndb.VndbCharactersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VnManager.Views.UserControls.MainPage.Vndb"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:res="clr-namespace:VnManager.Strings"
             xmlns:s="https://github.com/canton7/Stylet"
             xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
             xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
             xmlns:vm="clr-namespace:VnManager.ViewModels.UserControls.MainPage.Vndb"
             xmlns:controls="clr-namespace:BlurryControls.Controls;assembly=BlurryControls"
             mc:Ignorable="d"
             x:Name="CharUserControl"
             d:DataContext="{d:DesignInstance vm:VndbCharactersViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
        <Grid x:Name="OuterBlurContainer">
            <Grid x:Name="InnerBlurContainer">
                <Image Stretch="UniformToFill" Source="{Binding BackgroundImage, Mode=OneWay}"/>
            </Grid>
        </Grid>

        <controls:BlurryUserControl Height="{Binding ElementName=CharUserControl, Path=Height, Mode=TwoWay}" 
                                    Width="{Binding ElementName=CharUserControl, Path=Width, Mode=TwoWay}"
                                    Background="Transparent"
                                    Panel.ZIndex="100"
                                    BlurContainer="{Binding ElementName=OuterBlurContainer}"
                                    BlurRadius="40"
                                    Magnification="0.25">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Row="0" Grid.Column="1" ZIndex="1">
                    <Grid HorizontalAlignment="Right" VerticalAlignment="Top" Width="32" Height="32"  Margin="0,5,20,0" Background="#01FFFFFF" MouseLeftButtonDown="{s:Action CloseClick}">
                        <iconPacks:PackIconMaterial Kind="{x:Static iconPacks:PackIconMaterialKind.WindowClose}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black" BorderThickness="0">
                            <iconPacks:PackIconMaterial.Effect>
                                <DropShadowEffect Color="Crimson" ShadowDepth="0" BlurRadius="7"/>
                            </iconPacks:PackIconMaterial.Effect>
                        </iconPacks:PackIconMaterial>
                    </Grid>
                </Grid>

                <Grid Grid.Row="1" Grid.Column="0" Margin="10,100,10,0" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Content="{Binding MainTitle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="24" FontWeight="DemiBold"
                       Margin="30,0,0,0"/>



                    <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Margin="0,5,0,0">
                        <Button Content="Info"/>
                        <Button Content="Characters" Margin="15,0,0,0" Command="{s:Action ShowCharacters}"/>
                        <Button Content="Screens" Margin="15,0,0,0" Command="{s:Action ShowScreenshots}"/>
                    </StackPanel>

                </Grid>

                <Grid Grid.Row="1" Grid.Column="1"  Grid.RowSpan="2" Margin="15,65,15,0">
                    <Border BorderThickness="3" BorderBrush="Black">
                        <Image  MaxWidth="256" MaxHeight="400"  RenderOptions.BitmapScalingMode="Fant" Source="{Binding CoverImage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Border>

                </Grid>

                <Grid Grid.Row="2" Grid.Column="0" >
                    <TextBlock Text="Replace this with a BBCode block from MUI, so it supports hyperlinks"/>

                </Grid>

                <StackPanel Grid.Row="3" Grid.Column="1"  Margin="15,10,0,0">
                    <Label Content="Title: Muv Luv"/>
                    <Label Margin="0,0,0,0" Content="Origninal Title: ClannadJpn"/>
                    <TextBlock Margin="0,5,0,0" Text="Aliases: Clannad, Claddan" TextWrapping="Wrap"/>
                    <TextBlock Text="Released: Jun 26, 2020"/>
                    <TextBlock Text="Length: Very Long"/>
                    <TextBlock Text="Popularity:99.99"/>
                    <TextBlock Text="Rating:9"/>
                    <Label Content="Languages: Listbox"></Label>
                    <Label Content="Original Languages: Listbox"></Label>
                    <Label Content="Platforms: Listbox"></Label>
                    <Label Content="Producer:Key"/>
                </StackPanel>

            </Grid>


        </controls:BlurryUserControl>


        <!--End of Control -->
    </Grid>
</UserControl>
